<h2><%= "#{@subject.name}" %></h2>
<span class="text-muted">Last updated <%= time_ago_in_words(@subject.updated_at) %> ago</span>
<br />
<br />
<div class="row">
  <div class="col-lg-4">
    <%= render(partial: "pages_list") %>
  </div>
  <div class="col-lg-8">
    <% if @page.sections.published.present? %>
      <% @page.sections.published.each do |section| %>
        <h5><%= section.name %></h5>
        <p><%= section.content %></p>
      <% end %>
    <% else %>
      <p class="alert alert-warning">No content available.</p>
    <% end %>
  </div>
</div>
