<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-header d-flex">
        <span class="flex-grow-1">Pages</span>
        <%= link_to 'Add New Page', new_page_path, class: 'btn btn-primary' %>
      </div>
      <table  class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Permalink</th>
            <th>Position</th>
            <th>Visible</th>
            <th>Subject</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @pages.each do |page| %>
            <tr>
              <td><%= page.name %></td>
              <td><%= page.permalink %></td>
              <td><%= page.position %></td>
              <td><%= get_visibility_status(page.visible) %></td>
              <td><%= page.subject.name %></td>
              <td><%= link_to 'Show', page %></td>
              <td><%= link_to 'Edit', edit_page_path(page) %></td>
              <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
