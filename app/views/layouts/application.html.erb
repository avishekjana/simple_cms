<!DOCTYPE html>
<html>
  <head>
    <title>SimpleCms</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container">
        <%= link_to "Simple CMS", subjects_path, class: "navbar-brand" %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item active">
              <%= link_to "Subjects", subjects_path, class: 'nav-link' %>
            </li>
            <li class="nav-item active">
              <%= link_to "Pages", pages_path, class: 'nav-link' %>
            </li>
            <li class="nav-item active">
              <%= link_to "Sections", sections_path, class: 'nav-link' %>
            </li>
            <li class="nav-item active">
              <%= link_to "Logout", destroy_admin_user_session_path, class: 'nav-link', method: 'delete' %>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container content">
      <% if notice.present? %>
        <p class="alert alert-primary"><%= notice %></p>
      <% end %>
      <% if alert.present? %>
        <p class="alert alert-warning"><%= alert %></p>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
